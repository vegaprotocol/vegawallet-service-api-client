{
  "openapi": "3.0.2",
  "info": {
    "title": "vegawallet-service-client",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:1789/api/v1",
      "description": "Locally running vega wallet"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemas": {
      "VegaKey": {
        "type": "object",
        "properties": {
          "pub": {
            "type": "string",
            "nullable": false
          },
          "algo": {
            "type": "string",
            "nullable": false
          },
          "tainted": {
            "type": "boolean",
            "nullable": false
          },
          "meta": {
            "type": "array",
            "nullable": true,
            "items": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string",
                  "nullable": false
                },
                "value": {
                  "type": "string",
                  "nullable": false
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/token": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["wallet", "passphrase"],
                "properties": {
                  "wallet": {
                    "type": "string"
                  },
                  "passphrase": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns auth token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["token"],
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "responses": {
          "200": {
            "description": "Revokes auth token"
          }
        }
      }
    },
    "/network": {
      "get": {
        "responses": {
          "200": {
            "description": "TODO",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/wallets": {
      "post": {
        "description": "Create a wallet",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/wallets/import": {
      "post": {
        "description": "Import a wallet",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/keys": {
      "get": {
        "description": "List keys",
        "security": [{ "bearer": [] }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["keys"],
                  "properties": {
                    "keys": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/VegaKey"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Generate a key pair",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/keys/{keyid}": {
      "parameters": [
        {
          "name": "keyid",
          "in": "path",
          "description": "The public key",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "description": "Describe a key pair",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/keys/{keyid}/taint": {
      "parameters": [
        {
          "name": "keyid",
          "in": "path",
          "description": "The public key",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "put": {
        "description": "Taint a key pair",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/keys/{keyid}/metadata": {
      "parameters": [
        {
          "name": "keyid",
          "in": "path",
          "description": "The public key",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "put": {
        "description": "Annotate a key pair",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/command": {
      "post": {
        "description": "Sign a command",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/command/sync": {
      "post": {
        "description": "Sign a command (sync)",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/command/commit": {
      "post": {
        "description": "Sign a command (commit)",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/sign": {
      "post": {
        "description": "Sign data",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/verify": {
      "post": {
        "description": "Verify data",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/status": {
      "get": {
        "description": "Get the service status",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/version": {
      "get": {
        "description": "Get the wallet cli version",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["version", "versionHash"],
                  "properties": {
                    "version": {
                      "type": "string"
                    },
                    "versionHash": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
