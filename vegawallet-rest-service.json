{
  "openapi": "3.0.2",
  "info": {
    "title": "vegawallet-service-client",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:1789/api/v1",
      "description": "Locally running vega wallet"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemas": {
      "VegaKey": {
        "type": "object",
        "required": [
          "index",
          "pub",
          "algorithm",
          "tainted",
          "meta"
        ],
        "properties": {
          "index": {
            "type": "number",
            "nullable": false
          },
          "pub": {
            "type": "string",
            "nullable": false
          },
          "algorithm": {
            "type": "object",
            "nullable": false,
            "properties": {
              "name": {
                "nullable": false,
                "type": "string"
              },
              "version": {
                "nullable": false,
                "type": "number"
              }
            }
          },
          "tainted": {
            "type": "boolean",
            "nullable": false
          },
          "meta": {
            "type": "array",
            "nullable": true,
            "items": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string",
                  "nullable": false
                },
                "value": {
                  "type": "string",
                  "nullable": false
                }
              }
            }
          }
        }
      },
      "TransactionResponse": {
        "type": "object",
        "properties": {
          "txHash": {
            "nullable": false,
            "type": "string"
          },
          "tx": {
            "nullable": false,
            "type": "object",
            "properties": {
              "From": {
                "nullable": false,
                "type": "object",
                "properties": {
                  "PubKey": {
                    "nullable": false,
                    "type": "string"
                  }
                }
              },
              "input_data": {
                "type": "string",
                "nullable": false
              },
              "signature": {
                "type": "object",
                "nullable": false,
                "properties": {
                  "algo": {
                    "type": "string",
                    "nullable": false
                  },
                  "value": {
                    "type": "string",
                    "nullable": false
                  },
                  "version": {
                    "type": "number",
                    "nullable": false
                  }
                }
              }
            }
          }
        }
      },
      "OrderSubmissionBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "orderSubmission"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "orderSubmission": {
            "nullable": false,
            "type": "object",
            "required": [
              "marketId",
              "type",
              "side",
              "timeInForce",
              "size"
            ],
            "properties": {
              "marketId": {
                "nullable": false,
                "type": "string"
              },
              "reference": {
                "nullable": true,
                "type": "string"
              },
              "type": {
                "nullable": false,
                "type": "string"
              },
              "side": {
                "nullable": false,
                "type": "string"
              },
              "timeInForce": {
                "nullable": false,
                "type": "string"
              },
              "size": {
                "nullable": false,
                "type": "string"
              },
              "price": {
                "nullable": true,
                "type": "string"
              },
              "expiresAt": {
                "nullable": true,
                "type": "string"
              }
            }
          }
        }
      },
      "OrderCancellationBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "orderCancellation"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "orderCancellation": {
            "nullable": false,
            "type": "object",
            "required": [
              "orderId",
              "marketId"
            ],
            "properties": {
              "orderId": {
                "nullable": false,
                "type": "string"
              },
              "marketId": {
                "nullable": false,
                "type": "string"
              }
            }
          }
        }
      },
      "WithdrawSubmissionBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "withdrawSubmission"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "withdrawSubmission": {
            "nullable": false,
            "type": "object",
            "required": [
              "amount",
              "asset",
              "ext"
            ],
            "properties": {
              "amount": {
                "nullable": false,
                "type": "string"
              },
              "asset": {
                "nullable": true,
                "type": "string"
              },
              "ext": {
                "nullable": false,
                "type": "object",
                "required": [
                  "erc20"
                ],
                "properties": {
                  "erc20": {
                    "nullable": false,
                    "type": "object",
                    "required": [
                      "receiverAddress"
                    ],
                    "properties": {
                      "receiverAddress": {
                        "nullable": false,
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "VoteSubmissionBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "voteSubmission"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "voteSubmission": {
            "nullable": false,
            "type": "object",
            "required": [
              "value",
              "proposalId"
            ],
            "properties": {
              "value": {
                "nullable": false,
                "type": "string",
                "enum": [
                  "VALUE_YES",
                  "VALUE_NO"
                ]
              },
              "proposalId": {
                "nullable": true,
                "type": "string"
              }
            }
          }
        }
      },
      "DelegateSubmissionBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "delegateSubmission"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "delegateSubmission": {
            "nullable": false,
            "type": "object",
            "required": [
              "nodeId",
              "amount"
            ],
            "properties": {
              "nodeId": {
                "nullable": false,
                "type": "string"
              },
              "amount": {
                "nullable": true,
                "type": "string"
              }
            }
          }
        }
      },
      "UndelegateSubmissionBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "undelegateSubmission"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "undelegateSubmission": {
            "nullable": false,
            "type": "object",
            "required": [
              "nodeId",
              "amount",
              "method"
            ],
            "properties": {
              "nodeId": {
                "nullable": false,
                "type": "string"
              },
              "amount": {
                "nullable": true,
                "type": "string"
              },
              "method": {
                "nullable": true,
                "type": "string",
                "enum": [
                  "METHOD_NOW",
                  "METHOD_AT_END_OF_EPOCH"
                ]
              }
            }
          }
        }
      },
      "TransferSubmissionBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "undelegateSubmission"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "transfer": {
            "nullable": false,
            "type": "object",
            "required": [
              "fromAccountType",
              "toAccountType",
              "to",
              "asset",
              "amount"
            ],
            "properties": {
              "fromAccountType": {
                "nullable": false,
                "type": "string"
              },
              "toAccountType": {
                "nullable": false,
                "type": "string"
              },
              "to": {
                "nullable": false,
                "type": "string"
              },
              "amount": {
                "nullable": true,
                "type": "string"
              },
              "asset": {
                "nullable": true,
                "type": "string"
              },
              "oneOff": {
                "nullable": false,
                "type": "object",
                "required": [
                  "deliverOn"
                ],
                "properties": {
                  "deliverOn": {
                    "nullable": false,
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      },
      "GenericError": {
        "type": "object",
        "required": [
          "errors"
        ],
        "properties": {
          "errors": {
            "type": "object",
            "properties": {
              "*": {
                "nullable": false,
                "type": "array",
                "items": {
                  "type": "string",
                  "nullable": false
                }
              }
            }
          }
        }
      },
      "OrderAmendmentBody": {
        "type": "object",
        "required": [
          "pubKey",
          "propagate",
          "orderAmendment"
        ],
        "properties": {
          "pubKey": {
            "nullable": false,
            "type": "string"
          },
          "propagate": {
            "type": "boolean",
            "nullable": false
          },
          "orderAmendment": {
            "nullable": false,
            "type": "object",
            "required": [
              "marketId",
              "type",
              "side",
              "timeInForce",
              "size"
            ],
            "properties": {
              "marketId": {
                "nullable": false,
                "type": "string"
              },
              "orderId": {
                "nullable": false,
                "type": "string"
              },
              "reference": {
                "nullable": true,
                "type": "string"
              },
              "timeInForce": {
                "nullable": false,
                "type": "string"
              },
              "sizeDelta": {
                "nullable": false,
                "type": "number"
              },
              "price": {
                "nullable": true,
                "type": "object",
                "required": [
                  "value"
                ]
              },
              "expiresAt": {
                "nullable": true,
                "type": "object",
                "required": [
                  "value"
                ]
              }
            }
          }
        }
      },
      "NetworkConfig": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "level": {
            "type": "string"
          },
          "tokenExpiry": {
            "type": "string"
          },
          "port": {
            "type": "integer",
            "format": "int32"
          },
          "host": {
            "type": "string"
          },
          "api": {
            "type": "object",
            "properties": {
              "grpc": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "retries": {
                    "type": "integer",
                    "format": "int32"
                  }
                }
              },
              "rest": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "graphQl": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "tokenDApp": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "localPort": {
                "type": "integer",
                "format": "int32"
              }
            }
          },
          "console": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "localPort": {
                "type": "integer",
                "format": "int32"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/token": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "wallet",
                  "passphrase"
                ],
                "properties": {
                  "wallet": {
                    "type": "string"
                  },
                  "passphrase": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns auth token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "token"
                  ],
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [
          {
            "bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Revokes auth token"
          }
        }
      }
    },
    "/network": {
      "get": {
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "network"
                  ],
                  "properties": {
                    "network": {
                      "nullable": false,
                      "$ref": "#/components/schemas/NetworkConfig"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/wallets": {
      "post": {
        "description": "Create a wallet",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/wallets/import": {
      "post": {
        "description": "Import a wallet",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/keys": {
      "get": {
        "description": "List keys",
        "security": [
          {
            "bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "keys"
                  ],
                  "properties": {
                    "keys": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/VegaKey"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Generate a key pair",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/keys/{keyid}": {
      "parameters": [
        {
          "name": "keyid",
          "in": "path",
          "description": "The public key",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "description": "Describe a key pair",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "key"
                  ],
                  "properties": {
                    "key": {
                      "nullable": false,
                      "$ref": "#/components/schemas/VegaKey"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/keys/{keyid}/taint": {
      "parameters": [
        {
          "name": "keyid",
          "in": "path",
          "description": "The public key",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "put": {
        "description": "Taint a key pair",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/keys/{keyid}/metadata": {
      "parameters": [
        {
          "name": "keyid",
          "in": "path",
          "description": "The public key",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "put": {
        "description": "Annotate a key pair",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/command": {
      "post": {
        "description": "Sign a command",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/command/sync": {
      "post": {
        "description": "Sign a command (sync)",
        "security": [
          {
            "bearer": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "$ref": "#/components/schemas/OrderSubmissionBody"
                  },
                  {
                    "$ref": "#/components/schemas/OrderCancellationBody"
                  },
                  {
                    "$ref": "#/components/schemas/WithdrawSubmissionBody"
                  },
                  {
                    "$ref": "#/components/schemas/VoteSubmissionBody"
                  },
                  {
                    "$ref": "#/components/schemas/DelegateSubmissionBody"
                  },
                  {
                    "$ref": "#/components/schemas/UndelegateSubmissionBody"
                  },
                  {
                    "$ref": "#/components/schemas/OrderAmendmentBody"
                  },
                  {
                    "$ref": "#/components/schemas/TransferSubmissionBody"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericError"
                }
              }
            }
          },
          "401": {
            "description": "User rejected"
          }
        }
      }
    },
    "/command/commit": {
      "post": {
        "description": "Sign a command (commit)",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/sign": {
      "post": {
        "description": "Sign data",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/verify": {
      "post": {
        "description": "Verify data",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/status": {
      "get": {
        "description": "Get the service status",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/version": {
      "get": {
        "description": "Get the wallet cli version",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "version",
                    "versionHash"
                  ],
                  "properties": {
                    "version": {
                      "type": "string"
                    },
                    "versionHash": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}